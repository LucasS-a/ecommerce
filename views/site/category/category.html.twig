<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>{{ category.descategory }}</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src="{{ product.desphoto }}" alt="">
                        </div>
                        <h2><a href="/products/{{ product.desurl }}">{{ product.desproduct }}</a></h2>
                        <div class="product-carousel-price">
                            <ins>R$ {{ product.vlprice | number_format(2, ',','.')}}</ins>
                        </div>  
                        
                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/cart/{{ product.idproduct }}/add">Comprar</a>
                        </div>                       
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                            <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <li>
                            {% for page in pages %}
                                <li><a href= "{{ page.link }}" >{{ page.number }}</a></li>
                            {% endfor %}
                        </li>
                        <li>
                            <a href="#" aria-label="Next">
                            <span aria-hidden="true">»</span>
                            </a>
                        </li>
                        </ul>
                    </nav>                        
                </div>
            </div>
        </div>
    </div>
</div>